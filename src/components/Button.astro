---
interface Props {
  text: string;
  variant?: "primary" | "secondary";
}
const { text, variant = "primary" } = Astro.props;

const stylesMap = {
  primary:
    "outline-1 outline-primary hover:bg-primary/80 transition-colors ease-in-out duration-300",
  secondary: "",
};
---

<button
  type="button"
  class:list={[
    "group mt-2 flex w-fit cursor-pointer items-center rounded-md px-8 py-4 text-lg",
    stylesMap[variant],
  ]}
>
  <slot />
  {text}
</button>
