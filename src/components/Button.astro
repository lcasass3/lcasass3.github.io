---
interface Props {
  text: string;
  variant?: "primary" | "secondary";
  href?: string;
}
const { text, variant = "primary", href = Astro.routePattern } = Astro.props;

const stylesMap = {
  primary:
    "outline-1 outline-primary hover:bg-primary/80 transition-colors ease-in-out duration-300",
  secondary: "",
};
---

<a href={href} aria-label="">
  <button
    type="button"
    class:list={[
      "group mt-2 flex w-fit cursor-pointer items-center rounded-md px-4 py-3 text-base sm:px-6 md:px-8 md:py-4 md:text-lg",
      stylesMap[variant],
    ]}
  >
    <slot />
    {text}
  </button>
</a>
