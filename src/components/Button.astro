---
interface Props {
  text: string;
  variant?: "primary" | "secondary";
  href?: string;
}
const { text, variant = "primary", href = Astro.routePattern } = Astro.props;

const stylesMap = {
  primary:
    "bg-transparent rounded-md cursor-pointer outline-1 outline-primary transition-colors ease-in-out duration-300 active:bg-primary/80 hover:bg-primary/80",
  secondary: "",
};
---

<a
  href={href}
  aria-label={text}
  class:list={[
    "group active:bg-primary hover:bg-primary/80 mt-2 inline-block w-fit cursor-pointer rounded-md transition-colors duration-300 ease-in-out",
  ]}
>
  <button
    type="button"
    class:list={[
      "flex items-center px-4 py-3 text-base sm:px-6 md:px-8 md:py-4 md:text-lg",
      stylesMap[variant],
    ]}
  >
    <slot />
    {text}
  </button>
</a>
